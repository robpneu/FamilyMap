<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <Switch
        android:id="@+id/filter_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="fill_parent"
        android:id="@+id/filter_image_view"
        android:layout_toLeftOf="@id/filter_switch"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/filter_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/filter_image_view"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(Filter Name) Events"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/filer_subdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="FILTER BY (Filter Name) EVENTS"
        android:layout_below="@id/filter_description"
        android:paddingLeft="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@id/filer_subdescription"/>
</RelativeLayout>